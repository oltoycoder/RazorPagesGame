@page
@model RazorPagesGame.Pages.Games.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form>
<p>
    <select asp-for="GameCharacterRace" asp-items="Model.Races">
        <option value="">All</option>
</select>
   <select asp-for="GameCharacterGender" asp-items="Model.Genders">
       <option value="">All</option>
</select>
    <select asp-for="GameGenre" asp-items="Model.Genres">
        <option value="">All</option>
</select>
    Title: <input type="text" name="SearchString">
    <input type="submit" value="Search" />
</p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].NumberOfPlayableCharacters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].PlayableCharacterGender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Game[0].PlayableCharacterRace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Game) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPlayableCharacters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayableCharacterGender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PlayableCharacterRace)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
